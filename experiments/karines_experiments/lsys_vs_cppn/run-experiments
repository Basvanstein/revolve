 #!/bin/bash


cd projects/revolve
source .venv/bin/activate

while true
do
 for i in {1..20}; 	do
                ./revolve.py --experiment-name karines_experiments/data/lsys_vs_cppn/plasticoding_$i  --run $i  --manager experiments/karines_experiments/lsys_vs_cppn/plasticoding_novel.py    --run-simulation 0;
       sleep 5s
	   done
done


while true
do
 for i in {1..20}; 	do
                ./revolve.py --experiment-name karines_experiments/data/lsys_vs_cppn/hyperplasticoding_$i  --run $i  --manager experiments/karines_experiments/lsys_vs_cppn/hyperplasticoding_novel.py    --run-simulation 0;
       sleep 5s
	   done
done

while true
do
 for i in {1..1}; 	do
                ./revolve.py --experiment-name karines_experiments/data/lsys_vs_cppn/plasticoding_$i  --run $i  --manager experiments/karines_experiments/lsys_vs_cppn/plasticoding_speed.py    --n-cores 4 --port-start 4000  --evaluation-time 50;
       sleep 5s
	   done
done


while true
do
 for i in {1..1}; 	do
                ./revolve.py --experiment-name karines_experiments/data/lsys_vs_cppn/hyperplasticoding_$i  --run $i  --manager experiments/karines_experiments/lsys_vs_cppn/hyperplasticoding_speed.py   --n-cores 4 --port-start 4010  --evaluation-time 50;
       sleep 5s
	   done
done





##for an extra terminal

while true
	do
    sleep 1800s;
    kill $(  ps aux | grep 'gzserver' | awk '{print $2}');
    kill $(  ps aux | grep 'revolve.py' | awk '{print $2}');
    sleep 60s;
done

