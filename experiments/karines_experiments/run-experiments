 #!/bin/bash


while true
	do
         for i in {1..1}; do
                ./revolve.py --experiment-name karines_experiments/data/fast_novel_limbic_plane_$i --manager experiments/karines_experiments/fast_novel_limbic_plane.py --port-start 7800;
                ./revolve.py --experiment-name karines_experiments/data/fast_novel_limbic_tilted_$i --manager experiments/karines_experiments/fast_novel_limbic_tilted.py --port-start 7700;

                sleep 5s
	   done
done




while true
	do
    sleep 900s;
    kill $(  ps aux | grep 'gzserver' | awk '{print $2}');
    kill $(  ps aux | grep 'revolve.py' | awk '{print $2}');
    sleep 60s;
done


