 #!/bin/bash


cd projects/revolve
source .venv/bin/activate


while true
do
 for i in {1..1}; 	do
                ./revolve.py --experiment-name karines_experiments/data/plasticoding_seasons_$i  --run $i  --manager experiments/karines_experiments/baselines/plasticoding_seasons.py    --n-cores 4 --port-start 4000  --evaluation-time 50;
       sleep 5s
	   done
done




##for an extra terminal

while true
	do
    sleep 1800s;
    kill $(  ps aux | grep 'gzserver' | awk '{print $2}');
    kill $(  ps aux | grep 'revolve.py' | awk '{print $2}');
    sleep 60s;
done

