 #!/bin/bash


while true
	do
         for i in {1..1}; do
                ./revolve.py --experiment-name karines_experiments/data/fast_novel_limbic_plane_$i --run $i --manager experiments/karines_experiments/fast_novel_limbic_plane.py  --n-cores 4 --port-start 11141  --evaluation-time 50;
                ./revolve.py --experiment-name karines_experiments/data/fast_novel_limbic_tilted_$i --run $i --manager experiments/karines_experiments/fast_novel_limbic_tilted.py  --n-cores 4 --port-start 11241  --evaluation-time 50;

                sleep 5s
	   done
done




while true
	do
    sleep 900s;
    kill $(  ps aux | grep 'gzserver' | awk '{print $2}');
    kill $(  ps aux | grep 'revolve.py' | awk '{print $2}');
    sleep 60s;
done


