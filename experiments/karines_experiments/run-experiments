 #!/bin/bash

cd projects/revolve
source .venv/bin/activate


while true
	do
         for i in {1..20}; do
                ./revolve.py --experiment-name karines_experiments/data/plasticoding_seasons_$i --run $i --manager experiments/karines_experiments/baselines/plasticoding_seasons.py  --n-cores 4 --port-start 5070  --evaluation-time 50;
                sleep 5s
	   done
done



cd projects/revolve
source .venv/bin/activate
while true
	do
         for i in {1..1}; do
                ./revolve.py --experiment-name karines_experiments/data/hyperplasticoding_$i  --run $i --manager experiments/karines_experiments/hyperplasticoding.py  --n-cores 4 --port-start 5070  --evaluation-time 50;
                sleep 5s
	   done
done

cd projects/revolve
source .venv/bin/activate
while true
	do
         for i in {1..1}; do
                ./revolve.py --experiment-name karines_experiments/data/hyperplasticoding_2_$i  --run $i --use-neat True --manager experiments/karines_experiments/hyperplasticoding2.py  --n-cores 4 --port-start 5080  --evaluation-time 50;
                sleep 5s
	   done
done

cd projects/revolve
source .venv/bin/activate
while true
	do
         for i in {1..1}; do
                ./revolve.py --experiment-name karines_experiments/data/hyperplasticoding_3_$i  --run $i --use-neat True --manager experiments/karines_experiments/hyperplasticoding3.py  --n-cores 4 --port-start 5280  --evaluation-time 50;
                sleep 5s
	   done
done

cd projects/revolve
source .venv/bin/activate
while true
	do
         for i in {1..1}; do
                ./revolve.py --experiment-name karines_experiments/data/hyperplasticoding_4_$i  --run $i --use-neat True --manager experiments/karines_experiments/hyperplasticoding4.py  --n-cores 4 --port-start 5120  --evaluation-time 50;
                sleep 5s
	   done
done


   ./revolve.py --experiment-name karines_experiments/data/test1  --use-neat True  --manager experiments/karines_experiments/hyperplasticoding.py   --run-simulation 0



while true; do
    for i in {5..5}; do
    ./revolve.py --experiment-name link_storage/baselines/nonplastic_plasticoding_static/plasticoding_static_plane_$i --run $i --manager experiments/karines_experiments/baselines/plasticoding_static_plane.py  --n-cores 4 --port-start 8775  --evaluation-time 50;
sleep 5s;
done; done


##for an extra terminal

while true
	do
    sleep 1800s;
    kill $(  ps aux | grep 'gzserver' | awk '{print $2}');
    kill $(  ps aux | grep 'revolve.py' | awk '{print $2}');
    sleep 60s;
done

